{
  "openapi": "3.0.0",
  "info": {
    "title": "Authentication API",
    "description": "API for user authentication, including signup, account verification, and password reset.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "basePath": "/",
  "paths": {
    "/api/auth/signup": {
      "post": {
        "description": "Create a new user account",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "New user data",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "email": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["firstName", "lastName", "email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account created successfully, OTP sent to email",
            "schema": {
              "type": "object",
              "properties": {
                "msg": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "User already exists"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },

    "/api/auth/verify-account": {
  "post": {
    "description": "Verify user account using OTP",
    "parameters": [
      {
        "name": "body",
        "in": "body",
        "description": "Account verification data",
        "schema": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "otp": { "type": "string" }
          },
          "required": ["email", "otp"]
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Account verified successfully",
        "schema": {
          "type": "object",
          "properties": {
            "msg": { "type": "string" }
          }
        }
      },
      "400": {
        "description": "Invalid or expired OTP"
      },
      "500": {
        "description": "Server error"
      }
    }
  }
},

    "/api/auth/login": {
      "post": {
        "description": "Sign in using email and password",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Sign in data",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sign-in successful",
            "schema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Invalid password or account not verified"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/auth/forgot-password": {
      "post": {
        "description": "Request a password reset link",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Forget password data",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string" }
              },
              "required": ["email"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password reset link sent to email",
            "schema": {
              "type": "object",
              "properties": {
                "msg": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "User not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/auth/reset-password": {
  "post": {
    "description": "Reset password using reset token",
    "parameters": [
      {
        "name": "body",
        "in": "body",
        "description": "Reset password data",
        "schema": {
          "type": "object",
          "properties": {
            "token": { "type": "string" },
            "newPassword": { "type": "string" },
            "confirmPassword": { "type": "string" }
          },
          "required": ["token", "newPassword", "confirmPassword"]
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Password reset successfully",
        "schema": {
          "type": "object",
          "properties": {
            "msg": { "type": "string" }
          }
        }
      },
      "400": {
        "description": "Passwords do not match or invalid/expired token"
      },
      "500": {
        "description": "Server error"
      }
    }
  }
}

  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
