{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "REST FULL API",
      "description": "User Authentication and Management API"
    },
    "basePath": "/",
    "paths": {
      "/api/auth/signup": {
        "post": {
          "description": "Create a new user account",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "description": "New user data",
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": { "type": "string" },
                  "lastName": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string" }
                },
                "required": ["firstName", "lastName", "email", "password", "role"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Account created successfully, OTP sent to email",
              "schema": {
                "type": "object",
                "properties": {
                  "msg": { "type": "string" }
                }
              }
            },
            "400": {
              "description": "User already exists"
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      },
      "/api/auth/signin": {
  "post": {
    "description": "Sign in using email and password, then generate and send OTP",
    "parameters": [
      {
        "name": "body",
        "in": "body",
        "description": "Sign in data",
        "schema": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "password": { "type": "string" }
          },
          "required": ["email", "password"]
        }
      }
    ],
          "responses": {
            "200": {
              "description": "OTP sent to email, please verify",
              "schema": {
                "type": "object",
                "properties": {
                  "msg": { "type": "string" }
                }
              }
            },
            "400": {
              "description": "User not found"
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      },
      "/api/auth/verifyOtpAndSignin": {
        "post": {
          "description": "Verify OTP and sign in",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "description": "OTP verification data",
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "otp": { "type": "string" }
                },
                "required": ["email", "otp"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User signed in successfully",
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                }
              }
            },
            "400": {
              "description": "Invalid or expired OTP"
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      },
      "/api/auth/forget-password": {
        "post": {
          "description": "Request a password reset OTP",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "description": "Forget password data",
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" }
                },
                "required": ["email"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "OTP sent to email",
              "schema": {
                "type": "object",
                "properties": {
                  "msg": { "type": "string" }
                }
              }
            },
            "400": {
              "description": "User not found"
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      },
      "/api/auth/reset-password": {
        "post": {
          "description": "Reset password using OTP",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "description": "Reset password data",
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "otp": { "type": "string" },
                  "newPassword": { "type": "string" }
                },
                "required": ["email", "otp", "newPassword"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Password reset successfully",
              "schema": {
                "type": "object",
                "properties": {
                  "msg": { "type": "string" }
                }
              }
            },
            "400": {
              "description": "Invalid OTP"
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      }
    },
    "securityDefinitions": {
      "JWT": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  }
  